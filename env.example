# myMCPs Environment Variables
# Copy this file to .env and fill in your actual values

# GitHub MCP Server Configuration
# Get your token from: https://github.com/settings/tokens
# Required scopes: repo, read:org, read:user, read:project
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# PostgreSQL MCP Server Configuration
# Database connection parameters
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mymcp_db
POSTGRES_USER=mymcp_user
POSTGRES_PASSWORD=mymcp_pass

# Perplexity MCP Server Configuration
# Get your API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Optional: Custom port configurations
# GITHUB_MCP_PORT=8081
# POSTGRES_MCP_PORT=8082
# PERPLEXITY_MCP_PORT=8083
